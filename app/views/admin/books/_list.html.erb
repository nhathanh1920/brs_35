<table class="table table-striped table-bordered table-custom" cellspacing="0">
  <thead>
    <tr>
      <th class = "first-column"><%= t "no_number" %></th>
      <th><%= t "book_name" %></th>
      <th><%= t "book_author" %></th>
      <th><%= t "book_rating" %></th>
      <th><%= t "book_publish_date" %></th>
      <th class = "last-column"><%= t "action" %></th>
    </tr>
  </thead>
  <tbody id = "body_table_data">
    <% @books.each do |book| %>
      <tr>
        <td class = "first-column"><%= book.id %></td>
        <td><%= link_to book.name, admin_book_path(book) %></td>
        <td><%= book.author %></td>
        <td><%= book.rating %></td>
        <td><%= book.publish_date %></td>
        <td class = "last-column">
          <%= link_to t("edit_button"), edit_admin_book_path(book),
            class: "btn btn-warning btn-mn" %>
          <%= link_to t("delete_button"), admin_book_path(book),
            method: :delete, remote: true,
            data: {confirm: t("alert_confirm")},
            class: "btn btn-danger btn-mn btn-custom" %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
<div class="col-md-12 top-20 padding-0 custom-div"><%= will_paginate %></div>
