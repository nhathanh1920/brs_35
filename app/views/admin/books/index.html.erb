<div class="col-md-12 top-20 padding-0">
  <div class="col-md-12">
    <div class="panel">
      <div class="panel-heading">
        <h3><%= t "show" %></h3>
      </div>
      <div class="panel-body">
        <div class="col-md-6 mess-area-du padding-0">
          <% flash.each do |message_type, message| %>
            <div class="alert alert-<%= message_type %>">
              <button type="button" class="close closeNotify">&times;</button>
              <%= message %>
            </div>
          <% end %>
        </div>
        <div class="col-md-12 col-md-12-custom top-20 padding-0">
          <div class="col-md-4 padding-0">
            <%= form_tag admin_books_path, method: "GET",
              id: "my_form_search" do %>
              <%= text_field_tag :key_seach, params[:key_seach],
                placeholder: "#{t('book_name')} #{t('or')} #{t('book_author')}",
                class: "form-control reset-input search-input" %>
              <span class="glyphicon glyphicon-search form-control-feedback">
              </span>
            <% end %>
          </div>
          <div class="col-md-1 padding-0">
          </div>
          <div class="col-md-4 padding-0">
            <%= link_to t("add_new"), new_admin_book_path,
            class: "btn btn-info btn-mn" %>
          </div>
        </div>
        <div class = "clr"></div>
        <div class="responsive-table sort-table">
          <%= render "list" %>
        </div>
      </div>
    </div>
  </div>
</div>
