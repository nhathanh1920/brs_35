<div class="col-md-12 top-20 padding-0">
  <div class="col-md-12">
    <div class="panel">
      <div class="panel-heading">
        <h3><%= t "add_new" %></h3>
      </div>
      <div class="panel-body">
        <%= form_for [:admin, @book], html: {multipart: true} do |f| %>
          <% if @book.errors.any? %>
          <div class="row">
            <div class="col-md-6 mess-area-add">
              <%= render 'admin/shared/message_add', object: @book %>
            </div>
          </div>
          <% end %>
          <div class="row">
            <div class="col-md-4">
              <%= f.label :name %>
              <%= f.text_field :name, placeholder: t("book_name"),
                class: "form-control" %>
            </div>
            <div class="col-md-4">
              <%= f.label :category_id %>
              <%= f.select :category_id,
                @categories.collect {|c| [c.name, c.id]}, {},
                {class: "form-control reset-select"} %>
            </div>
            <div class="col-md-4">
              <%= f.label :author %>
              <%= f.text_field :author, placeholder: t("book_author"),
                class: "form-control" %>
            </div>
          </div>
          <div class="row">
            <div class="col-md-4">
              <%= f.label :url %>
              <%= f.text_field :url, placeholder: t("book_url"),
                class: "form-control" %>
            </div>
            <div class="col-md-4">
              <%= f.label :publish_date,
                "#{t("book_publish_date")} #{t("book_date_format")}" %>
              <%= f.date_field :publish_date,
                placeholder: t("book_publish_date"),
                class: "form-control" %>
            </div>
            <div class="col-md-4">
              <%= f.label :image %>
              <%= f.file_field :image,
                accept: "image/jpeg,image/gif,image/png" %>
            </div>
          </div>
          <div class="row top-20">
            <div class="col-md-8">
              <%= f.label :description %>
              <%= f.text_area :description, rows: "10",
                class: "form-control" %>
            </div>
          </div>
          <div class="row">
            <div class="col-md-6 top-20 padding-0">
              <div class="form-group col-md-3">
                <%= button_tag type: "submit",
                  class: "btn ripple btn-gradient btn-info" do %>
                  <div><span><%= t "add_button" %></span></div>
                <% end %>
              </div>
              <div class="form-group col-md-3">
                <%= button_tag type: "reset",
                  class: "btn ripple btn-gradient btn-default" do %>
                  <div><span><%= t "reset_button" %></span></div>
                <% end %>
              </div>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
