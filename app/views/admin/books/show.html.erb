<div class="col-md-12 top-20 padding-0">
  <div class="col-md-12">
    <div class="panel">
      <div class="panel-heading">
        <h3><%= @book.name %></h3>
      </div>
      <div class="panel-body">
        <div class="col-md-4">
          <%= display_image @book, "img-responsive" %>
        </div>
        <div class="col-md-6">
          <div class="responsive-table">
            <table class="table table-striped table-bordered" width="100%"
              cellspacing="0">
              <tbody>
                <tr>
                  <th><%= t "book_name" %></th>
                  <th><%= @book.name %></th>
                </tr>
                <tr>
                  <th><%= t "book_category" %></th>
                  <th><%= @book.category.name %></th>
                </tr>
                <tr>
                  <th><%= t "book_author" %></th>
                  <th><%= @book.author %></th>
                </tr>
                <tr>
                  <th><%= t "book_rating" %></th>
                  <th><%= @book.rating %></th>
                </tr>
                <tr>
                  <th><%= t "book_url" %></th>
                  <th><%= @book.url %></th>
                </tr>
                <tr>
                  <th><%= t "book_publish_date" %></th>
                  <th><%= l @book.publish_date %></th>
                </tr>
              </tbody>
            </table>
          </div>
        </div>
        <div class = "col-md-12 top-20">
          <div class = "col-md-10 padding-0"><%= @book.description %></div>
        </div>
      </div>
    </div>
  </div>
</div>
<% if @reviews.any? %>
  <div class="col-md-12 col-sm-12 profile-v1-body">
    <div class="col-md-9">
      <div class="panel-heading">
        <h3>
          <%= "#{@book.reviews.count}  #{t('book_review_for')}" %>
          <strong><%= @book.name %></strong>
        </h3>
      </div>
      <% @reviews.each do |review| %>
        <div class="panel box-v7">
          <div class="panel-body">
            <div class="col-md-12 padding-0 box-v7-header">
              <div class="col-md-12 padding-0">
                <div class="col-md-10 padding-0">
                  <%= link_to image_tag(review.user.image,
                    class: "box-v7-avatar pull-left"), "#" %>
                  <h4><%= review.user.name %></h4>
                  <p>
                    <%= "#{time_ago_in_words(review.created_at)}" %>
                    <%= t("time_ago") %>
                  </p>
                </div>
                <div class="col-md-2 padding-0">
                  <div class="btn-group right-option-v1">
                    <i class="glyphicon glyphicon-option-vertical box-v7-menu"
                      data-toggle="dropdown"></i>
                    <ul class="dropdown-menu" role="menu">
                      <li><%= link_to t("delete_button"), "#" %></li>
                      <li><%= link_to t("goto_button"), "#" %></li>
                    </ul>
                  </div>
                </div>
              </div>
            </div>
            <div class="col-md-12 padding-0 box-v7-body">
            <h4 class="media-heading"><%= review.title %></h4>
              <p><%= review.content %></p>
              <div class="col-md-12 top-20">
                <i class="glyphicon glyphicon-thumbs-up"></i> 2819
                <i class="glyphicon glyphicon-comment"></i> 2819
              </div>
            </div>
            <div class="col-md-12 padding-0 box-v7-comment">
              <% review.comments.each do |comment| %>
                <div class="media">
                  <div class="media-left">
                  <%= link_to image_tag(comment.user.image,
                      class: "media-object box-v7-avatar"), "#" %>
                  </div>
                  <div class="media-body">
                    <h4 class="media-heading"><%= comment.user.name %></h4>
                    <p><%= comment.content %></p>
                  </div>
                </div>
              <% end %>
            </div>
          </div>
        </div>
      <% end %>
      <%= will_paginate @reviews %>
    </div>
  </div>
<% end %>
