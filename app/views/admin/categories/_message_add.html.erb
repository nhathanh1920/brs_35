<% if @category.errors.any? %>
  <div class="alert alert-danger alert-custom">
    <button type="button" class="close closeNotify">&times;</button>
    <% @category.errors.full_messages.each do |msg| %>
      <p><%= msg %></p>
    <% end %>
  </div>
<% else %>
  <div class="alert alert-info alert-custom">
    <button type="button" class="close closeNotify">&times;</button>
    <p><%= t "alert_result" %></p>
  </div>
<% end %>
