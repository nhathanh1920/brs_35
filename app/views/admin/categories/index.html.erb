<div class="col-md-12 top-20 padding-0">
  <div class="col-md-12">
    <div class="panel">
      <div class="panel-heading">
        <h3><%= t "add_new" %></h3>
      </div>
      <div class="panel-body">
        <%= form_for @category, url: admin_categories_path,
          remote: true do |f| %>
          <div class="row">
            <div class="col-md-6">
              <%= f.label :name %>
              <%= f.text_field :name, placeholder: t("category_name"),
                class: "form-control reset-input" %>
            </div>
            <div class = "clr"></div>
            <div class="col-md-6 top-20 padding-0">
              <div class="form-group col-md-3">
                <%= button_tag type: "submit",
                  class: "btn ripple btn-gradient btn-info" do %>
                  <div><span><%= t "add_button" %></span></div>
                <% end %>
              </div>
              <div class="form-group col-md-3">
                <%= button_tag type: "reset",
                  class: "btn ripple btn-gradient btn-default" do %>
                  <div><span><%= t "reset_button" %></span></div>
                <% end %>
              </div>
            </div>
          </div>
          <div class="row">
            <div class="col-md-6 mess-area-add">
            </div>
            <div class="col-md-6">
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
<div class="col-md-12 top-20 padding-0">
  <div class="col-md-12">
    <div class="panel">
      <div class="panel-heading">
        <h3><%= t "show" %></h3>
      </div>
      <div class="panel-body">
        <div class="col-md-6 mess-area-du padding-0">
        </div>
        <div class="responsive-table">
          <table class="table table-striped table-bordered table-custom"
            cellspacing="0">
            <thead>
              <tr>
                <th class = "first-column"><%= t "no_number" %></th>
                <th><%= t "category_name" %></th>
                <th class = "last-column"><%= t "action" %></th>
              </tr>
            </thead>
            <tbody id = "body_table_data">
              <% @categories.each do |category| %>
                <tr>
                  <td class = "first-column">
                    <%= category.id %>
                  </td>
                  <td><%= category.name %></td>
                  <td class = "last-column">
                    <button class="btn btn-warning btn-mn" value="primary">
                      <%= t "edit_button" %>
                    </button>
                    <%= link_to t("delete_button"), admin_category_path(category),
                       method: :delete, remote: true,
                       data: {confirm: t("alert_confirm")},
                       class: "btn btn-danger btn-mn btn-custom" %>
                  </td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>
        <div class="col-md-12 top-20 padding-0 custom-div">
          <%= will_paginate %>
        </div>
      </div>
    </div>
  </div>
</div>
