<% @books_relate.each do |book_relate| %>
  <li>
    <figure>
      <%= link_to image_tag(book_relate.image, class: "img-thumbnail img-custom"),
        book_relate, class: "aa-book-img aa-book-img-custom" %>
      <figcaption>
        <h4 class="aa-book-title">
          <%= link_to book_relate.name, book_relate %>
        </h4>
      </figcaption>
    </figure>
  </li>
<% end %>
