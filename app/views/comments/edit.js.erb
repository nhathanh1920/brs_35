<% if @comment.errors.any? %>
  notify = $('.mess-area-add');
  notify.html('<%= j render "shared/message_add", object: @comment %>');
<% else %>
  $('#comment-<%= @comment.id%>').click(function(){
    $('#comment_form_<%=@review.id %>').
      replaceWith('<%= j render "comments/edit", comment: @comment %>');
  })
<% end %>
