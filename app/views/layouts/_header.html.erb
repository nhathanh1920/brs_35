<nav class="navbar navbar-default">
  <div class="container-fluid">
    <div class="navbar-header">
      <button type="button" class="navbar-toggle collapsed"
        data-toggle="collapse" data-target="#bs-example-navbar-collapse-1"
        aria-expanded="false">
        <span class="sr-only"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </button>
      <%= link_to t("project_name"), root_path, {class: "navbar-brand"} %>
    </div>
    <div class="collapse navbar-collapse navbar-custom"
      id="bs-example-navbar-collapse-1">
      <%= form_tag books_path, method: "GET", id: "search_book",
        class: "navbar-form navbar-left" do %>
        <%= text_field_tag :search, params[:search],
          placeholder: t("book_name"), class: "form-control" %>
          <div id = "result_search"></div>
      <% end %>
      <ul class="nav navbar-nav">
        <li class="dropdown">
          <%= link_to t("menu_book"), books_path %>
        </li>
      </ul>
      <ul class="nav navbar-nav">
        <li class="dropdown">
          <a href="#" class="dropdown-toggle" data-toggle="dropdown"
            role="button" aria-haspopup="true" aria-expanded="false">
            <%= t "menu_cate" %>
          </a>
          <ul class="dropdown-menu">
            <% @categories.each do |category| %>
              <li>
                <%= link_to category.name, books_path(category: category.id) %>
              </li>
            <% end %>
          </ul>
        </li>
      </ul>
      <ul class="nav navbar-nav navbar-right">
        <% if logged_in? %>
          <li class="user-name"><span><%= current_user.name %></span></li>
          <li class="dropdown avatar-dropdown">
            <%= image_tag "admin/avatar3.png", class: "img-circle avatar",
              data: {toggle: "dropdown"},
              aria: {haspopup: "true", expanded: "true"} %>
            <ul class="dropdown-menu user-dropdown">
              <li><%= link_to t("account_profile"), "#" %></li>
              <li><%= link_to t("account_setting"), "#" %></li>
              <% if verify_user_access? %>
                <li><%= link_to t("admin_section"), admin_root_path %></li>
              <% end %>
              <li role="separator" class="divider"></li>
              <li>
                <%= link_to t("account_logout"), logout_path, method: :delete %>
              </li>
            </ul>
          </li>
        <% else %>
          <li class="user-name"><span><%= t "account_guest" %></span></li>
          <li class="dropdown avatar-dropdown">
            <%= image_tag "admin/avatar3.png", class: "img-circle avatar",
              data: {toggle: "dropdown"},
              aria: {haspopup: "true", expanded: "true"} %>
            <ul class="dropdown-menu user-dropdown">
              <li><%= link_to t("signin_button"), login_path %></li>
              <li><%= link_to t("account_sign_up"), "/signup" %></li>
            </ul>
          </li>
        <% end %>
      </ul>
    </div>
  </div>
</nav>
