<!DOCTYPE html>
<html>
  <head>
    <title><%= full_title yield :title %></title>
    <%= csrf_meta_tags %>
    <%= stylesheet_link_tag "application", media: "all",
      "data-turbolinks-track": "reload" %>
    <%= javascript_include_tag "application",
      "data-turbolinks-track": "reload" %>
    <%= render "layouts/shim" %>
  </head>
  <body>
    <nav class="navbar navbar-default">
      <div class="container-fluid">
        <div class="navbar-header">
          <button type="button" class="navbar-toggle collapsed"
          data-toggle="collapse" data-target="#bs-example-navbar-collapse-1"
          aria-expanded="false">
          <span class="sr-only"></span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
        </button>
        <%= link_to t("project_name"), "#", {class: "navbar-brand"} %>
      </div>
      <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
        <ul class="nav navbar-nav navbar-right">
          <% if logged_in? %>
            <li class="user-name"><span><%= current_user.name %></span></li>
            <li class="dropdown avatar-dropdown">
              <%= image_tag "admin/avatar3.png", class: "img-circle avatar",
                data: {toggle: "dropdown"},
                aria: {haspopup: "true", expanded: "true"} %>
              <ul class="dropdown-menu user-dropdown">
                <li><%= link_to t("account_profile"), "#" %></li>
                <li><%= link_to t("account_setting"), "#" %></li>
                <% if verify_user_access? %>
                  <li><%= link_to t("admin_section"), admin_root_path %></li>
                <% end %>
                <li role="separator" class="divider"></li>
                <li>
                  <%= link_to t("account_logout"), logout_path, method: :delete %>
                </li>
              </ul>
            </li>
          <% else %>
            <li class="user-name"><span><%= t "account_guest" %></span></li>
            <li class="dropdown avatar-dropdown">
              <%= image_tag "admin/avatar3.png", class: "img-circle avatar",
                data: {toggle: "dropdown"},
                aria: {haspopup: "true", expanded: "true"} %>
              <ul class="dropdown-menu user-dropdown">
                <li><%= link_to t("signin_button"), login_path %></li>
                <li><%= link_to t("account_sign_up"), signup_path %></li>
              </ul>
            </li>
          <% end %>
        </ul>
      </div>
    </nav>
    <div class="container">
      <div class="row">
        <h1><%= t "account_sign_up" %></h1>
        <div class="col-md-6 col-md-offset-3">
          <%= form_for @user, url: signup_path do |f| %>
            <%= render "shared/error_messages" %>
            <%= f.label :name %>
            <%= f.text_field :name, class: "form-control" %>
            <%= f.label :email %>
            <%= f.email_field :email, class: "form-control" %>
            <%= f.label :password_user %>
            <%= f.password_field :password, class: "form-control" %>
            <%= f.label :password_confirmation %>
            <%= f.password_field :password_confirmation, class: "form-control" %>
            <%= f.submit t("btn_signup"), class: "btn btn-primary" %>
          <% end %>
        </div>
      </div>
    </div>
    <footer class="footer container-fluid">
      <p><%= t "footer" %></p>
    </footer>
  </body>
</html>
